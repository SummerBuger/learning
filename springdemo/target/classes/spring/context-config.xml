<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:/simple.properties</value>
      </list>
    </property>
  </bean>

  <bean id="jodaDateEditor" class="com.springdemo.liam.component.JodaDateEditor">
    <property name="dateTimePattern" value="yyyy-MM-dd HH:mm:ss"/>
  </bean>

  <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
    <property name="propertyEditorRegistrars">
      <list>
        <bean class="com.springdemo.liam.component.JodaDateEditorRegistrar">
          <property name="datePattern" value="yyyy-MM-dd HH:mm:ss"/>
        </bean>
      </list>
    </property>
  </bean>

  <context:component-scan base-package="com.springdemo.liam">
    <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    <context:exclude-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice"/>
    <context:exclude-filter type="assignable" expression="com.springdemo.liam.component.ProtoComponent"/>
    <context:exclude-filter type="assignable" expression="com.springdemo.liam.service.MultiSubService"/>
  </context:component-scan>


  <!--<import resource="web-config.xml"/>-->

</beans>